<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guitartutorandanalyser.guitartutor">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/GuitarTutorTheme1">
        <activity
            android:name=".GuitarTutorMain"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Songs"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="guitartutorandanalyser.guitartutor.Songs" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Lessons"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="guitartutorandanalyser.guitartutor.Lessons" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Tutor"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="guitartutorandanalyser.guitartutor.Tutor" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserGuide"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="guitartutorandanalyser.guitartutor.UserGuide" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BestScores"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="guitartutorandanalyser.guitartutor.BestScores" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AnalyseResult"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="guitartutorandanalyser.guitartutor.AnalyseResult" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>